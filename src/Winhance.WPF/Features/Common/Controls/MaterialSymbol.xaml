<UserControl x:Class="Winhance.WPF.Features.Common.Controls.MaterialSymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Winhance.WPF.Features.Common.Controls"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="24">
    <TextBlock x:Name="IconTextBlock"
               FontFamily="{StaticResource MaterialSymbolsFont}"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
               Text="{Binding IconText, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
</UserControl>
